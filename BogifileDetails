i# Bogiefile for TypeScript CDK Project - Dev Environment

version: "1.0"

environment:
  name: dev
  runtime: nodejs:22
  variables:
    NODE_ENV: development
    CI_SERVER: "dev-ci-server.example.com"   # pipeline metadata value

phases:
  install:
    commands:
      - echo "ğŸ”§ Installing dependencies..."
      - npm ci

  build:
    commands:
      - echo "ğŸ—ï¸ Building TypeScript project..."
      - npm run build

  synth:
    commands:
      - echo "ğŸ“œ Synthesizing CloudFormation templates..."
      - npx cdk synth

  deploy:
    commands:
      - echo "ğŸš€ Deploying CDK app to AWS (dev)..."
      - npx cdk deploy --require-approval never --all

artifacts:
  files:
    - "cdk.out/**"


