  install:
    commands:
      - echo "ğŸ”§ Installing dependencies..."
      - npm ci

  build:
    commands:
      - echo "ğŸ—ï¸ Building TypeScript project..."
      - npm run build

  synth:
    commands:
      - echo "ğŸ“œ Synthesizing CloudFormation templates..."
      - npx cdk synth MyDevStack

  deploy:
    commands:
      - echo "ğŸš€ Deploying MyDevStack to AWS (dev)..."
      - npx cdk deploy --require-approval never MyDevStack

